{
  "openapi": "3.0.3",
  "info": {
    "title": "tunas-spec",
    "description": "Tunas REST api",
    "version": "v0.0.1"
  },
  "servers": [
    {
      "url": "{environment}.localhost:8080",
      "description": "local dev",
      "variables": {
        "environment": {
          "default": "dev",
          "description": "Server environment",
          "enum": [
            "dev",
            "prod",
            "qa"
          ]
        }
      }
    }
  ],
  "paths": {
    "/category": {
      "summary": "All about categories",
      "get": {
        "responses": {
          "200": {
            "description": "Get categories success response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/categorySchema"
                      }
                    },
                    "metaData": {
                      "$ref": "#/components/schemas/metaData"
                    }
                  }
                },
                "examples": {
                  "success": {
                    "value": {
                      "response": [
                        {
                          "id": "8c2c184e-11d2-11ec-82a8-0242ac130003",
                          "category": "Seafood",
                          "imageUrl": "",
                          "deleted": false
                        }
                      ],
                      "metaData": {
                        "code": 200,
                        "message": "OK"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "store new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "category": {
                    "type": "string"
                  },
                  "imageUrl": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "Seafood": {
                  "value": {
                    "category": "Seafood",
                    "imageUrl": ""
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "category",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "string"
                    },
                    "metaData": {
                      "$ref": "#/components/schemas/metaData"
                    }
                  }
                },
                "examples": {
                  "success": {
                    "value": {
                      "response": "",
                      "metaData": {
                        "message": "Created",
                        "code": 200
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "update category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  },
                  "imageUrl": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "fastfood": {
                  "value": {
                    "id": "1e0a0e91-95fe-11ec-9185-8deab4502942",
                    "category": "Fast food",
                    "imageUrl": null
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success update category",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "string"
                    },
                    "metaData": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        },
                        "code": {
                          "type": "number"
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "category": {
                    "value": {
                      "response": "",
                      "metaData": {
                        "code": 200,
                        "message": "OK"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/category/{categoryid}": {
      "get": {
        "parameters": [
          {
            "required": true,
            "in": "path",
            "name": "categoryid"
          }
        ],
        "responses": {
          "200": {
            "description": "success getting category by id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response" : {
                      "$ref": "#/components/schemas/categorySchema"
                    },
                    "metaData" : {
                      "$ref": "#/components/schemas/metaData"
                    }
                  }
                },
                "examples": {
                  "fastfood": {
                    "value": {
                      "response": {
                        "id": "1e0a0e91-95fe-11ec-9185-8deab4502942",
                        "category": "Fast food",
                        "imageUrl": null,
                        "deleted": false
                      },
                      "metaData": {
                        "code": 200,
                        "message": "OK"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "delete category",
        "parameters": [
          {
            "in": "path",
            "required": true,
            "name": "categoryId",
            "examples": {
              "categoryId": {
                "value": {
                  "id": "1e0a0e91-95fe-11ec-9185-8deab4502942"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success destroying category",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/schema200"
                },
                "examples": {
                  "success": {
                    "value": {
                      "response" : "",
                      "metaData" : {
                        "code" : 200,
                        "message": "OK"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
