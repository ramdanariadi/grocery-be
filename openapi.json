              "schema": {
                "$ref": "#/components/schemas/productSchema"
              },
              "examples": {
                "carrot": {
                  "value": {
                    "name": "Carrot",
                    "price": 10,
                    "weight": 1000,
                    "perUnit": 100,
                    "description": "Good for health",
                    "imageUrl" : null,
                    "category": "8c2c184e-11d2-11ec-82a8-0242ac130003"
