                  "$ref": "#/components/schemas/schema200"
                },
                "examples": {
                  "created": {
                    "value": {
                      "response": "",
                      "metaData": {
                        "code": 201,
                        "message": "Created"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put" : {
        "description": "store product",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": true
                  },
                  "id": {
                    "type": "string",
                    "required": true
                  },
                  "imageUrl": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number",
                    "required": true
                  },
                  "categoryId": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "carrot": {
                  "value": {
                    "name": "BLACK",
                    "id": "a3c02e8c-11d2-11ec-82a8-0242ac130003",
                    "imageUrl": null,
                    "price": 18500,
                    "categoryId": "8c2c184e-11d2-11ec-82a8-0242ac130003"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successfully update product",
            "content": {
              "application/json" : {
                "schema": {
                  "$ref": "#/components/schemas/schema200"
                },
                "examples": {
                  "created": {
                    "value": {
                      "response": "",
                      "metaData": {
                        "code": 201,
                        "message": "Created"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
