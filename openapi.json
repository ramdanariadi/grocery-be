  "components": {
    "schemas": {
      "categorySchema": {
        "properties": {
          "id": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          },
          "deleted": {
            "type": "boolean"
          }
        }
      },
      "productSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true
          },
          "price": {
            "type": "number",
            "required": true
          },
          "weight": {
            "type": "number",
            "required": true
          },
          "perUnit": {
            "type": "number",
            "required": true
          },
          "description": {
            "type": "string"
          },
          "imageUrl" : {
            "type": "string"
          },
          "category": {
            "type": "string",
            "required": true
          }
        }
      },
      "metaData": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "code": {
            "type": "number"
          }
        }
      },
      "schema200": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string"
          },
          "metaData": {
            "$ref": "#/components/schemas/metaData"
          }
        }
      },
      "schema200Product": {
        "type": "object",
        "properties": {
          "response" : {
            "$ref": "#/components/schemas/productSchema"
          },
          "metaData": {
            "$ref": "#/components/schemas/metaData"
          }
        }
      },
      "schema200Products": {
        "type": "object",
        "properties": {
          "response" : {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/productSchema"
            }
          },
          "metaData": {
            "$ref": "#/components/schemas/metaData"
          }
        }
      }
    }
  }
